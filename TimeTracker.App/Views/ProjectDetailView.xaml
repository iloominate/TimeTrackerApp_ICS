<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:TimeTracker.App.Views"
                       xmlns:vm="clr-namespace:TimeTracker.App.ViewModels.Project"
                       xmlns:m="clr-namespace:TimeTracker.BL.Models.ListModels;assembly=TimeTracker.BL"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="TimeTracker.App.Views.ProjectDetailView"
                       x:DataType="vm:ProjectDetailViewModel"
                       Title="ProjectDetailView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Activities List" FontSize="Large" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Margin="10">
                <CollectionView ItemsSource="{Binding UserList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:UserListModel">
                            <Grid>
                                <Image Source="{Binding PhotoUrl}"
                                       Aspect="AspectFill" 
                                       HeightRequest="100" 
                                       WidthRequest="100"/>
                                <Label Text="{Binding Name}" FontSize="Small" HorizontalOptions="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <StackLayout>
                <CollectionView ItemsSource="{Binding ActivityList}"
                                    VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:ActivityListModel">
                            <Frame Margin="10"
                                       Padding="10"
                                       BackgroundColor="Black"
                                       CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Type}" FontSize="Large" Grid.Column="0" Margin="20"/>
                                    <Label Text="{Binding Start}" FontSize="Small" Grid.Column="1" Margin="33"/>
                                    <Label Text="{Binding End}" FontSize="Small" Grid.Column="2" Margin="33"/>
                                    
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</views:ContentPageBase>