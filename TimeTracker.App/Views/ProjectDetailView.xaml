<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:TimeTracker.App.Views"
                       xmlns:vm="clr-namespace:TimeTracker.App.ViewModels.Project"
                       xmlns:m="clr-namespace:TimeTracker.BL.Models.ListModels;assembly=TimeTracker.BL"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="TimeTracker.App.Views.ProjectDetailView"
                       x:DataType="vm:ProjectDetailViewModel"
                       Title="ProjectDetailView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Activities List" FontSize="Large" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Margin="10">
                <CollectionView ItemsSource="{Binding UserList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:UserListModel">
                            <Grid>
                                <Image Source="{Binding PhotoUrl}"
                                       Aspect="AspectFill" 
                                       HeightRequest="100" 
                                       WidthRequest="100"/>
                                <Label Text="{Binding Name}" FontSize="Small" HorizontalOptions="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    
                </CollectionView>
                
    
                
            </StackLayout>

            <StackLayout>
                
                <CollectionView ItemsSource="{Binding ActivityList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:ActivityListModel">
                            <Frame BackgroundColor="Black">
                                <StackLayout Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Type}" FontSize="Large" />
                                    </StackLayout>
                                    <Label Text="{Binding Start}" FontSize="Medium" />
                                    <Label Text="{Binding End}" FontSize="Medium" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Only logged in users can create activities"
                    HorizontalOptions="End" 
                    VerticalOptions="End" 
                    Margin="20" 
                    FontSize="18" 
                    TextColor="White" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</views:ContentPageBase>