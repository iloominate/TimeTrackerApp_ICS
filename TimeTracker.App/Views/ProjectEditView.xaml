<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:TimeTracker.App.Views"
                       xmlns:vm="clr-namespace:TimeTracker.App.ViewModels.Project"
                       xmlns:m="clr-namespace:TimeTracker.BL.Models.ListModels;assembly=TimeTracker.BL"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="TimeTracker.App.Views.ProjectEditView"
                       x:DataType="vm:ProjectEditViewModel"
                       x:Name="ProjectEditViewRoot"
                       NavigationPage.HasNavigationBar="false"
                       Title="TimeTracker"
                       WidthRequest="1120"
                       HeightRequest="680">

	<ContentPage.Content>
		<Grid BackgroundColor="Black">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Label Grid.Row="0"
                   Grid.Column="0"
                   Margin="30"
                   FontSize="30"
                   TextColor="White"
                   Text="Activities List" />

			<Button Grid.Row="0"
                    Grid.Column="1"
                    Text="Create Activity"
                    Command="{Binding Source={x:Reference ProjectEditViewRoot}, Path=BindingContext.GoToActivityEditCommand}"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="20"
                    FontSize="18"
                    BackgroundColor="LimeGreen"
                    TextColor="Black"
                    CornerRadius="15">
				<Button.Triggers>
					<Trigger TargetType="Button" Property="IsPressed" Value="True">
						<Setter Property="BackgroundColor" Value="Green" />
					</Trigger>
				</Button.Triggers>
			</Button>

			<CollectionView Grid.Row="1"
                            Grid.ColumnSpan="1"
                            ItemsSource="{Binding UserList}"
                            ItemsLayout="HorizontalList">

				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="m:UserListModel">
						<Frame Padding="0"
                               CornerRadius="25"
                               WidthRequest="110"
                               HeightRequest="110"
                               Margin="10">
							<Grid>
								<Image Grid.Row="0"
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="FillAndExpand"
                                       Aspect="AspectFill"
                                       WidthRequest="110"
                                       HeightRequest="110"
                                       Source="{Binding PhotoUrl, TargetNullValue='user_place_holder.png'}" />

								<Label Grid.Row="0"
                                       Margin="5"
                                       FontSize="17"
                                       LineBreakMode="WordWrap"
                                       Text="{Binding Name}"
                                       TextColor="White"
                                       VerticalOptions="End"
                                       HorizontalOptions="Center" />
							</Grid>
						</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<Picker Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Title="Filter:"
                    x:Name="FilterPicker"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0, 0, 25, 5"
                    FontSize="18"
                    BackgroundColor="#292929"
                    TextColor="White">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Date</x:String>
                        <x:String>Name</x:String>
                        <x:String>Type</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <CollectionView Grid.Row="2"
                            Grid.ColumnSpan="3"
                            ItemsSource="{Binding ActivityList}"
                            VerticalOptions="FillAndExpand">

				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="m:ActivityListModel">
						<Frame Margin="10"
                               Padding="10"
                               BackgroundColor="Black"
                               CornerRadius="10">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition/>
									<ColumnDefinition/>
									<ColumnDefinition/>
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>
								<Label Text="{Binding Name}"
                                       FontSize="25"
                                       Grid.Column="0"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
								<Label Text="{Binding Start, StringFormat='{0:MMM dd yyyy HH:mm}'}"
                                       FontSize="18"
                                       Grid.Column="1"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
								<Label Text="{Binding End, StringFormat='{0:MMM dd yyyy HH:mm}'}"
                                       FontSize="18"
                                       Grid.Column="2"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
								<Label Text="{Binding Type, Converter={StaticResource ActivityTypeToStringConverter}}"
                                       FontSize="18"
                                       Grid.Column="3"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
								<Button Text="Details"
                                        Grid.Column="3"
                                        Command="{Binding Source={x:Reference ProjectEditViewRoot}, Path=BindingContext.GoToActivityDetailCommand}"
                                        CommandParameter="{Binding Id}"
                                        HorizontalOptions="End"
                                        VerticalOptions="End"
                                        Margin="17"
                                        FontSize="18"
                                        BackgroundColor="White"
                                        TextColor="Black"
                                        CornerRadius="15">
									<Button.Triggers>
										<Trigger TargetType="Button" Property="IsPressed" Value="True">
											<Setter Property="BackgroundColor" Value="Gray" />
										</Trigger>
									</Button.Triggers>
								</Button>
							</Grid>
						</Frame>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

		</Grid>
	</ContentPage.Content>

</views:ContentPageBase>