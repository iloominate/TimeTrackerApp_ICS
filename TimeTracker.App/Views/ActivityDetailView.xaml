<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:TimeTracker.App.Views"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:vm="clr-namespace:TimeTracker.App.ViewModels.Activity"
                       xmlns:listModels="clr-namespace:TimeTracker.BL.Models.ListModels;assembly=TimeTracker.BL"
                       x:Class="TimeTracker.App.Views.ActivityDetailView"
                       x:DataType="vm:ActivityDetailViewModel"
                       x:Name="ActivityDetailViewRoot"
                       NavigationPage.HasNavigationBar="false"
                       Title="TimeTracker"
                       WidthRequest="1120"
                       HeightRequest="680">

    <StackLayout BackgroundColor="Black">

        <Label Text="{Binding Activity.Name}"
               VerticalOptions="Center"
               FontSize="Header"/>

        <Label Text="{Binding Activity.Description}"
               FontSize="Medium"/>

        <Label Text="{Binding Activity.Type}"
               FontSize="Medium"/>

        <Label Text="{Binding Activity.Start}"
               VerticalOptions="Center"
               FontSize="Title"/>

        <Label Text="{Binding Activity.End}"
               VerticalOptions="Center"
               FontSize="Title"/>

    </StackLayout>
</views:ContentPageBase>