<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:TimeTracker.App.Views"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:vm="clr-namespace:TimeTracker.App.ViewModels.Activity"
                       x:Class="TimeTracker.App.Views.ActivityDetailView"
                       x:DataType="vm:ActivityDetailViewModel"
                       x:Name="ActivityDetailViewRoot"
                       NavigationPage.HasNavigationBar="false"
                       Title="TimeTracker"
                       WidthRequest="1120"
                       HeightRequest="680">

	<StackLayout BackgroundColor="Black" Margin="0, 0, 0, 0">
		<Grid Margin="100">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="600"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


				<Label Grid.Row="0"
                       Grid.Column="0"
                       Margin="5"
                       Text="{Binding Activity.Name}"
                       VerticalOptions="Center"
                       FontSize="Header"/>

				<Label Grid.Row="1"
                       Grid.Column="0"
                       Margin="8"
                       Text="{Binding Activity.Description}"
                       FontSize="Medium"/>

		</Grid>

        <Frame Padding="10"
               BorderColor="White"
               CornerRadius="15"
               HeightRequest="60"
               WidthRequest="300"
               Margin="5,100, -600, 5">
            <Label Text="{Binding Activity.Start}"
                   VerticalOptions="Center"
                   FontSize="Title"/>
        </Frame>

		<Frame Padding="10"
               BorderColor="White"
               CornerRadius="15"
               HeightRequest="60"
               WidthRequest="300"
               Margin="5">
			<Label Text="{Binding Activity.End}"
                                      VerticalOptions="Center"
                                      FontSize="Title"/>
		</Frame>

	</StackLayout>
</views:ContentPageBase>
